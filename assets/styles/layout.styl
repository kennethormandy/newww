.container
  position relative
  float none
  clear both
  overflow hidden
  max-width fullColumnWidth
  margin 0 auto
  padding 0 20px
  &.narrow
    max-width narrowColumnWidth

  &:after
    content: ""
    display table
    clear both

.content
  float left
  width 60%
  margin-bottom 90px

  @media only screen and (max-width: 1024px)
    width 57%

  @media only screen and (max-width: mobileMaxWidth)
    float none
    width 100%

  &.half
    width 48%

    @media only screen and (max-width: mobileMaxWidth)
      float none
      width 100%

.sidebar
  float right
  margin-top 40px
  max-width 320px

ul.columnar
  @extend .vanilla-list
  columns 3
  column-gap 40px

  li
    column-break-inside avoid
    padding 5px
    margin-bottom 20px

  @media only screen and (max-width: mobileMaxWidth)
    columns 1

.package-widget
  &:hover
    a
      color npmred !important

  h3, h3 a
    font-size packageWidgetHeadingHeight
    line-height packageWidgetHeadingHeight
    overflow visible
    vertical-align top
    margin 0
    padding 0
    max-width 90%
    @extend .ellipsis

  a
    &.name
      text-decoration none
      transform all 0.1s
      color greigh2
      @extend .red-on-hover
      &:before
        color greigh5
        line-height packageWidgetHeadingHeight
        padding-right 6px

  p
    font-size 15px
    margin 0
    max-width 90%
    padding-left 22px
    color greigh3
    @extend .ellipsis

  .quiet
    font-size 14px
    color greigh3
    a
      color greigh2
      @extend .red-on-hover
      font-weight 400


.box
  margin 0 0 30px
  font-size 16px

  p
    padding 14px
    margin 0

  a
    text-decoration none
    &:hover
      text-decoration underline

  li
    line-height 2.5
    white-space nowrap
    overflow hidden
    text-overflow ellipsis
    padding-right 10px
    border-bottom 1px solid greigh5

    &:last-child
      border-bottom none

.pagination
  margin 50px 0
  width 100%
  text-align center

  a
    display inline-block
    border-radius 2px
    border 1px solid greigh6
    text-align center
    margin 0 2px 10px
    padding 1px 11px
    color npmred
    text-decoration none
    text-transform lowercase

    &:hover, &.active
      border-color darken(npmred, 20%)
      color background-color
      background npmred

// Lists

ol
  list-style-position inside

ul.maintainers
  list-style none
  margin 0 0 30px 0
  padding 0
  float none
  overflow hidden

  li
    float left
    display block
    margin 0
    padding 3px 0
    position relative

  a
    display block
    position relative
    width maintainerAvatarSize
    height maintainerAvatarSize
    margin-right 10px
    margin-bottom 10px

  img, span
    display block
    position absolute
    width maintainerAvatarSize

  img
    border-radius 5px
    transition all 0.3s

  span
    line-height maintainerAvatarSize
    text-align center
    opacity 0
    transition all 0.3s
    text-overflow ellipsis
    overflow hidden
    padding 0 6px
    text-decoration none

  a:hover
    img
      opacity 0
    span
      text-decoration underline

  &:hover
    span
      opacity 1
    img
      opacity 0.1


p.error
  display block
  background error-color
  color darken(text-color, 20%)
  border 1px solid darken(error-color, 30%)
  border-radius 2px
  padding 10px
  margin 10px 0

#not-found
  text-align center
  img
    max-width 400px

.pass-info
  margin 1em 0
  p
    margin 0
