#subheader
  position relative

#home-stats
  position relative
  margin 25px auto 25px auto
  padding 0
  max-width 900px
  display flex
  flex-wrap wrap
  justify-content space-between

  @media only screen and (max-width: 820px)
    display block
    .stat
      display block
      width 200px
      margin 15px auto

.stat
  position relative
  flex 0 1 auto
  line-height 20px
  font-size 14px
  color text-color-subdued
  margin 20px 20px 20px 0
  padding-left 46px
  &.icon-package-hex
    &:before
      top 0
      font-size 36px

  &:before
    position absolute
    top 2px
    left 0
    font-size 30px
    margin-right 10px
    margin-top 2px
    color greigh2

  strong
    font-family codefonts
    font-weight 600
    font-size 16px
    display block
    color greigh2



ul.columnar
  columns 3
  column-gap 40px
  @extend .vanilla-list

  li
    column-break-inside avoid
    padding 5px
    margin-bottom 20px


packageWidgetLogoSize = 42px

.package-widget
  position relative
  // background yellow

  &:hover
    a
      color npmred !important

  .package-logo
    display block
    position absolute
    top 0px
    left 0
    width packageWidgetLogoSize
    height packageWidgetLogoSize
    // background #EEE
    text-align center

    img
      display inline-block
      max-width 100%
      max-height 100%

  .package-details
    display block
    padding-left packageWidgetLogoSize + 12px
    max-width 90%

  h3, h3 a
    font-size 20px
    line-height 20px
    overflow visible
    vertical-align top
    margin 0
    padding 0
    max-width 100%
    @extend .ellipsis

  a
    &.name
      text-decoration none
      transform all 0.1s
      color greigh2
      @extend .red-on-hover

  p
    font-size 15px
    margin 0
    max-width 100%
    color greigh3
    @extend .ellipsis

  .quiet
    font-size 14px
    color greigh3
    a
      color greigh2
      @extend .red-on-hover
      font-weight 400
