label
  display block
  margin 0 0 7px
  color greigh2
  font-weight 600

  &.checkbox
    color npmred
    font-size 14px

textarea
  border 1px solid greigh5
  margin 0 0 50px
  padding 3%
  width 94%
  min-height 300px
  border-radius 4px
  font 400 16px/25px codefonts
  color text-color
  outline 0
  resize none

input[type=text],
input[type=email],
input[type=password]
  display block
  width 100%
  height 38px
  padding-left 2%
  padding-right 2%
  border 1px solid greigh5
  margin 0 0 20px
  border-radius 4px
  font-family fonts
  color text-color
  outline 0

input[type=checkbox]
  margin 0 6px 0 0

select
  display block
  width 96%
  margin 0 0 20px
  outline 0

input[type=submit]
  border 0
  border-radius 4px
  text-align center
  display block
  padding 0 35px
  margin 0 0 4px
  height 47px
  line-height 47px
  color background-color
  font-family fonts
  font-size 18px
  background npmred
  cursor pointer
  -webkit-appearance: none;
  clear both

  &:hover
    background greigh2

input[type=file]
  margin 0 0 50px

.help-text
  font-size 14px
  color text-color-subdued
  line-height 18px
  margin -15px 0 22px

// Login Forms

.login-forms
  max-width narrowColumnWidth
  margin 0 auto 50px
  text-align left

  p
    margin 25px 0 0
    color text-color-subdued
    font-size 15px
    text-align: center

    &.help-text
      margin -15px 0 22px
      text-align left

    a
      text-decoration none
      margin 0 5px

      &:hover
        color greigh2

  input[type=submit]
    width 100%
    text-transform lowercase

  label
    text-transform lowercase


.star
  position absolute
  top 35px
  left -17px
  display block
  margin 10px 0
  input[type=checkbox]
    display none

    & + label
      font-size 16px
      line-height starHeight
      vertical-align top
      color text-color
      cursor pointer
      &:before
        transition transform 0.5s
        font-size starHeight
        color greigh5
        margin-right 5px

    &:checked + label:before
      color npmred
      transform rotate(360deg)
